@using ProjectAPI.Model;
@using ProjectAPI.Model.Enum
@model UserDTO;
      <div class="mb-4 mt-5 pt-5 pb-3 d-flex justify-content-center">
        <form method="post" asp-action="Update">
          <div class="input-group mb-3">
            <label asp-for="Username" class="input-group-text"></label>
            <input asp-for="Username" class="form-control" />
          </div>
          <span asp-validation-for="Username" class="text-danger"></span>
          <div class="input-group mb-3">
            <label asp-for="Email" class="input-group-text"></label>
            <input type="Email" asp-for="Email" class="form-control" />
          </div>
          <span asp-validation-for="Email" class="text-danger"></span>
          <div class="input-group mb-3">
            <label asp-for="Password" class="input-group-text"></label>
            <input id="password-field" type="password" asp-for="Password" class="form-control" />
                <div class="input-group-text">
                    <i toggle="#password-field" class=" toggle-password bi bi-eye-fill"></i>
                </div>
          </div>
          <span asp-validation-for="Password" class="text-danger"></span>
          <div class="input-group mb-3">
            <label asp-for="Forename" class="input-group-text"></label>
            <input asp-for="Forename" class="form-control" />
          </div>
          <span asp-validation-for="Forename" class="text-danger"></span>
          <div class="input-group mb-3">
            <label asp-for="Surname" class="input-group-text"></label>
            <input asp-for="Surname" class="form-control" />
          </div>
          <span asp-validation-for="Surname" class="text-danger"></span>
          <div class="input-group mb-3">
            <label asp-for="Gender" class="input-group-text"></label>
            <select asp-for="Gender" class="form-control">
                @switch (Model.Gender)
                {
                    case @Gender.MALE:
                     <option value="@Gender.MALE" selected>MALE</option>
                     <option value="@Gender.FEMALE" >FEMALE</option>
                     <option value="@Gender.OTHER" >OTHER</option>
                    break;
                    case @Gender.FEMALE:
                     <option value=" @Gender.FEMALE" selected>FEMALE</option>
                     <option value="@Gender.MALE" >Male</option>
                     <option value="@Gender.OTHER" >OTHER</option>
                    break;
                    case @Gender.OTHER:
                     <option value="@Gender.OTHER:" selected>OTHER</option>
                     <option value="@Gender.MALE" >MALE</option>
                     <option value="@Gender.FEMALE" >FEMALE</option>
                    break;
                }
            </select>
          </div>
           <span asp-validation-for="Gender" class="text-danger"></span>
          <div class="text-center">
            <button type="submit" class="btn btn-primary " style="width:150px">Update</button>
        </form>
            <a asp-area="" asp-controller="User" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger " style="width:150px"><i class="bi bi-trash"></i></a>
          </div>
      </div>

      <script>
      $(".toggle-password").click(function() {

        $(this).toggleClass("bi bi-eye-slash-fill");
         var input = $($(this).attr("toggle"));
        if (input.attr("type") == "password") {
            input.attr("type", "text");
        } else {
            input.attr("type", "password");
          }
            });
      </script>