@using ProjectAPI.Model
@using ProjectAPI.Model.Enum

@model NewUserDTO  
    <div class="mb-4 mt-5 pt-5 pb-3 d-flex justify-content-center">
        <form method="post" asp-action="Create">
          <div class="input-group mb-3">
            <label asp-for="Username" class="input-group-text"></label>
            <input asp-for="Username" class="form-control" />
            <span asp-validation-for="Username" class="text-danger"></span>
          </div>
          <div class="input-group mb-3">
            <label asp-for="Password" class="input-group-text"></label>
            <input type="password" asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
          </div>
          <div class="input-group mb-3">
            <label asp-for="Forename" class="input-group-text"></label>
            <input asp-for="Forename" class="form-control" />
            <span asp-validation-for="Forename" class="text-danger"></span>
          </div>
          <div class="input-group mb-3">
            <label asp-for="Surname" class="input-group-text"></label>
            <input asp-for="Surname" class="form-control" />
            <span asp-validation-for="Surname" class="text-danger"></span>
          </div>
          <div class="input-group mb-3">
            <label asp-for="Gender" class="input-group-text"></label>
            <select asp-for="Gender" class="form-control">
                     <option value="@Gender.MALE">MALE</option>
                     <option value="@Gender.FEMALE">FEMALE</option>
                     <option value="@Gender.OTHER">OTHER</option>
            </select>
            <span asp-validation-for="Gender" class="text-danger"></span>
          </div>
          <div class="text-center">
            <button type="submit" class="btn btn-success " style="width:150px">Create</button>
            <a asp-area="" asp-controller="User" asp-action="Index" class="btn btn-info mx-2">Back</a>
          </div>
        </form>
      </div>