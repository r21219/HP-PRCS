@using ProjectAPI.Model
@model NewUserDTO
      <div class="mb-4 mt-5 pt-5 pb-3 d-flex justify-content-center">
        <form method="get" asp-action="Login">
          <div class="input-group mb-3">
            <label asp-for="Username" class="input-group-text"></label>
            <input asp-for="Username" class="form-control" />
            <span asp-validation-for="Username" class="text-danger"></span>
          </div>
          <div class="input-group mb-3">
            <label asp-for="Password" class="input-group-text"></label>
            <input type="password" asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
          </div>
          <div class="text-center">
            <button type="submit" class="btn btn-primary " style="width:150px">Login</button>
          </div>
        </form>
      </div>